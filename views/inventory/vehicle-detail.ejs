<%- include('./partials/header') %> 

<main class="container mx-auto my-8 p-4"> <%-- Container centralizado e espaçamento geral --%>
  <% if (title) { %>
    <h1 class="text-4xl font-bold text-center mb-6 text-gray-800"><%= title %></h1> <%-- Título da página --%>
  <% } %>

  <% if (vehicle) { %>
    <div class="bg-white shadow-xl rounded-lg overflow-hidden md:flex md:max-w-4xl mx-auto"> <%-- Card principal --%>

      <div class="md:w-1/2"> <%-- Coluna da imagem --%>
        <img src="<%= vehicle.inv_image %>" alt="Imagem do <%= vehicle.inv_make %> <%= vehicle.inv_model %>"
             class="w-full h-64 object-cover md:h-full"> <%-- Imagem responsiva --%>
      </div>

      <div class="p-6 md:w-1/2 flex flex-col justify-center"> <%-- Coluna dos detalhes --%>
        <h2 class="text-3xl font-extrabold text-gray-900 mb-2">
          <%= vehicle.inv_make %> <%= vehicle.inv_model %>
        </h2>
        <p class="text-xl text-green-600 font-semibold mb-4">
          Preço: $<%= vehicle.inv_price.toLocaleString('en-US') %>
        </p>

        <ul class="text-lg text-gray-700 mb-4">
          <li><strong>Ano:</strong> <%= vehicle.inv_year %></li>
          <li><strong>Cor:</strong> <%= vehicle.inv_color %></li>
          <li><strong>Milhas:</strong> <%= vehicle.inv_miles.toLocaleString('en-US') %></li>
        </ul>

        <h3 class="text-xl font-bold text-gray-800 mb-2">Descrição:</h3>
        <p class="text-gray-600 leading-relaxed mb-6"><%= vehicle.inv_description %></p>

        <% if (vehicle.classification_id) { %>
          <a href="/inventory/<%= vehicle.classification_id %>" 
             class="inline-block bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 transition duration-300 ease-in-out text-center self-start">
            Voltar para a lista
          </a>
        <% } else { %>
          <a href="/inventory" 
             class="inline-block bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 transition duration-300 ease-in-out text-center self-start">
            Voltar para todas as classificações
          </a>
        <% } %>

      </div>
    </div>
  <% } else { %>
    <p class="text-center text-red-600 text-lg">Desculpe, não conseguimos encontrar os detalhes para este veículo.</p>
  <% } %>
</main>

<%- include('./partials/footer') %>